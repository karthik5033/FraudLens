{
  "manifest_version": 3,
  "name": "FraudShield Capture",
  "version": "1.0",
  "description": "Capture current tab screenshot, copy to clipboard, and open FraudShield analyze page.",
  "action": {
    "default_title": "Capture & Analyze",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "scripting", "clipboardWrite", "activeTab"],
  "host_permissions": ["https://yourfrauddashboard.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
